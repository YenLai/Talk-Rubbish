          height="80%">
        <div class="form-check col-12 text-center my-3">
          <input class="form-check-input" type="radio" name="radios" id="designer" value="designer"
            {{#if (eq target 'designer')}}checked{{/if}}>
          <label class="form-check-label" for="designer">
            designer
          </label>
        </div>
      </div>

      <div class="card col-4 mt-3">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg" width="100%"
          height="80%">
        <div class="form-check col-12 text-center my-3">
          <input class="form-check-input" type="radio" name="radios" id="entrepreneur" value="entrepreneur"
            {{#if (eq target 'entrepreneur')}}checked{{/if}}>
          <label class="form-check-label" for="entrepreneur">
            entrepreneur
          </label>
        </div>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-3 col-sm-2 text-center">
